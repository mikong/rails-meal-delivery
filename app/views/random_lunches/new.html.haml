%h1.title Random Lunch

= form_with url: random_lunch_path, local: true do |form|
  .field.is-horizontal
    .field-label.is-normal
      = form.label :tags, "Preferences", class: 'label'
    .field-body
      .field
        .control
          = form.collection_check_boxes :tag_ids, @tags, :id, :name do |b|
            = b.label(class: "checkbox") { b.check_box + "\n" + b.text }
            %br

  .field.is-horizontal
    .field-label
    .field-body
      .field
        .control
          = form.submit "Search", class: 'button is-primary'
