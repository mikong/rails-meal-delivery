%h1.title Restaurants

= link_to 'New restaurant', new_restaurant_path

%table
  %thead
    %tr
      %th Name
      %th Actions

  %tbody
    - @restaurants.each do |restaurant|
      %tr
        %td= restaurant.name
        %td
          = link_to 'Show', restaurant
          = link_to 'Edit', edit_restaurant_path(restaurant)
